<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <!-- 定义全局变量 -->
    <Properties>
        <Property name="log.pattern">%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n</Property>
        <!-- 使用环境变量 LOG_DIR 作为日志文件路径前缀 -->
        <Property name="log.dir">${env:HOME}/.musique</Property>
        <Property name="log.file.name">${log.dir}/app.log</Property>
        <!-- 每个日志文件的最大大小 -->
        <Property name="log.max.size">10MB</Property>
    </Properties>
    <Appenders>
        <!-- 控制台输出 -->
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${log.pattern}"/>
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>
        <!-- 滚动文件输出 -->
        <RollingFile name="RollingFile" fileName="${log.file.name}" filePattern="${log.dir}/app.%d{yyyy-MM-dd}.%i.log">
            <PatternLayout pattern="${log.pattern}"/>
            <Policies>
                <!-- 基于文件大小的滚动策略 -->
                <SizeBasedTriggeringPolicy size="${log.max.size}"/>
            </Policies>
            <!-- 保留的旧日志文件数量 -->
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <!-- 根日志记录器 -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>